<?xml version="1.0"?>
<robot name="satellite">
  <!-- Corpo Centrale: Cilindro -->
  <link name="body">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="1000.0"/>
      <inertia ixx="1000.0" ixy="0" ixz="0" iyy="1000.0" iyz="0" izz="1000.0"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.5" length="2.0"/>
      </geometry>
      <material name="grey">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.5" length="2.0"/>
      </geometry>
    </collision>
  </link>

  <!-- Giunti per le braccia -->
  <joint name="body_left_arm_joint" type="fixed">
    <parent link="body"/>
    <child link="left_arm"/>
    <origin xyz="-0.5 0 0" rpy="0 0 0"/>
  </joint>
  <joint name="body_right_arm_joint" type="fixed">
    <parent link="body"/>
    <child link="right_arm"/>
    <origin xyz="0.5 0 0" rpy="0 0 0"/>
  </joint>

  <!-- Braccia: Scatola -->
  <link name="left_arm">
    <inertial>
      <origin xyz="-0.05 0 0" rpy="0 0 0"/>
      <mass value="0.0"/>
      <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/>
    </inertial>
    <visual>
      <origin xyz="-0.05 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
      <material name="grey">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="-0.05 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </collision>
  </link>
  <link name="right_arm">
    <inertial>
      <origin xyz="0.05 0 0" rpy="0 0 0"/>
      <mass value="0.0"/>
      <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/>
    </inertial>
    <visual>
      <origin xyz="0.05 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
      <material name="grey">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0.05 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </collision>
  </link>

  <!-- Giunti per i pannelli -->
  <joint name="left_arm_left_panel_joint" type="fixed">
    <parent link="left_arm"/>
    <child link="left_panel"/>
    <origin xyz="-0.1 0 0" rpy="0 0 0"/>
  </joint>
  <joint name="right_arm_right_panel_joint" type="fixed">
    <parent link="right_arm"/>
    <child link="right_panel"/>
    <origin xyz="0.1 0 0" rpy="0 0 0"/>
  </joint>

  <!-- Pannelli: Scatola -->
  <link name="left_panel">
    <inertial>
      <origin xyz="-0.5 0 0" rpy="0 0 0"/>
      <mass value="0.0"/>
      <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/>
    </inertial>
    <visual>
      <origin xyz="-0.5 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="1.0 0.1 2.0"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="-0.5 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="1.0 0.1 2.0"/>
      </geometry>
    </collision>
  </link>
  <link name="right_panel">
    <inertial>
      <origin xyz="0.5 0 0" rpy="0 0 0"/>
      <mass value="0.0"/>
      <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/>
    </inertial>
    <visual>
      <origin xyz="0.5 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="1.0 0.1 2.0"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0.5 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="1.0 0.1 2.0"/>
      </geometry>
    </collision>
  </link>
</robot>

